<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".MainActivity">

    <!-- Modern Header with Enhanced Design -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_header_modern"
        android:padding="@dimen/card_padding"
        android:elevation="@dimen/card_elevation"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🚗 AlertDrive"
            android:textColor="@color/text_on_primary"
            android:textSize="@dimen/text_size_header"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:letterSpacing="0.02" />

    </LinearLayout>

    <!-- Guideline để chia layout - responsive -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_camera_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Enhanced Camera Preview with Modern Frame -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cameraCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/layout_margin_horizontal"
            android:layout_marginEnd="@dimen/layout_margin_horizontal"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:layout_marginBottom="0dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintBottom_toTopOf="@id/guideline_camera_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/cameraContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/spacing_small"
            android:background="@color/surface_light">
            <androidx.camera.view.PreviewView
                android:id="@+id/previewView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/spacing_tiny" />

            <!-- Overlay for detection visualization -->
            <ImageView
                android:id="@+id/overlayImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="matrix"
                android:alpha="1.0"
                android:visibility="visible" />

            <!-- Modern Camera Status Overlay -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="@dimen/camera_overlay_margin"
                app:cardBackgroundColor="@color/glass_background"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvCameraStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📹 CAMERA READY"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_caption"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="@dimen/camera_status_padding"
                    android:paddingVertical="@dimen/spacing_small"
                    android:visibility="visible" />

            </androidx.cardview.widget.CardView>

            <!-- Recording Indicator -->
            <View
                android:id="@+id/recordingIndicator"
                android:layout_width="@dimen/icon_size_small"
                android:layout_height="@dimen/icon_size_small"
                android:layout_gravity="top|end"
                android:layout_margin="@dimen/camera_overlay_margin"
                android:background="@drawable/ic_check"
                android:backgroundTint="@color/status_red"
                android:visibility="gone" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- Combined Bottom Panel: status + controls -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_horizontal"
        android:layout_marginEnd="@dimen/layout_margin_horizontal"
        android:layout_marginTop="0dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cameraCard"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/layout_margin_horizontal"
            android:paddingRight="@dimen/layout_margin_horizontal"
            android:paddingBottom="@dimen/layout_margin_horizontal"
            android:paddingTop="@dimen/layout_margin_horizontal">

            <!-- Status area (header + metrics) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/green_lightest"
                    android:padding="@dimen/card_padding"
                    android:layout_marginBottom="@dimen/layout_margin_vertical">

                    <ImageView
                        android:id="@+id/statusIcon"
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/ic_check"
                        app:tint="@color/primary"
                        android:layout_marginEnd="@dimen/spacing_small" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🟢 SYSTEM READY"
                        android:textSize="@dimen/text_size_body"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <View
                        android:layout_width="@dimen/spacing_small"
                        android:layout_height="@dimen/spacing_small"
                        android:background="@drawable/ic_check"
                        android:backgroundTint="@color/primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- EAR Metric Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:minHeight="72dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/spacing_tiny">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/spacing_medium">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="👁️ EAR"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tvEyeRatio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.000"
                                android:textSize="@dimen/text_size_body"
                                android:textColor="@color/primary"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_marginTop="@dimen/spacing_tiny" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Frame Counter Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/spacing_tiny"
                        android:minHeight="72dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/spacing_tiny">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/spacing_medium">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="📊 FRAMES"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tvFrameCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0/5"
                                android:textSize="@dimen/text_size_body"
                                android:textColor="@color/primary"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_marginTop="@dimen/spacing_tiny" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Progress Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:minHeight="72dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/spacing_tiny">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/spacing_medium">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⚠️ RISK"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif-medium" />

                            <ProgressBar
                                android:id="@+id/progressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/progress_bar_height"
                                android:layout_marginTop="@dimen/spacing_tiny"
                                android:layout_marginStart="@dimen/progress_bar_margin"
                                android:layout_marginEnd="@dimen/progress_bar_margin"
                                android:progress="0"
                                android:max="100"
                                android:progressDrawable="@drawable/bg_progress_gradient"
                                android:progressBackgroundTint="@color/green_lightest" />

                            <TextView
                                android:id="@+id/tvRiskPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="@dimen/text_size_caption"
                                android:textColor="@color/primary"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_marginTop="@dimen/spacing_tiny" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Divider space -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@android:color/transparent" />

            <!-- Controls area (buttons + quick stats) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="6dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/buttonCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/layout_margin_vertical"
                    app:cardBackgroundColor="@color/primary"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="@dimen/button_padding"
                        android:minHeight="@dimen/button_height">

                        <ImageView
                            android:id="@+id/btnIcon"
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:src="@drawable/ic_play"
                            app:tint="@color/text_on_primary" />

                        <TextView
                            android:id="@+id/btnToggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🚀 Start Detection"
                            android:textColor="@color/text_on_primary"
                            android:textSize="@dimen/text_size_title"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="@dimen/spacing_medium" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/layout_margin_vertical"
                    app:cardBackgroundColor="@color/primary"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">
                    <LinearLayout
                        android:id="@+id/btnSelectSound2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="@dimen/button_padding"
                        android:minHeight="@dimen/button_height">
                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:src="@android:drawable/ic_btn_speak_now"
                            app:tint="@color/text_on_primary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CHỌN ÂM THANH"
                            android:textColor="@color/text_on_primary"
                            android:textSize="@dimen/text_size_title"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="@dimen/spacing_medium" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/green_lightest"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⏱️ Session: 00:00"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginEnd="@dimen/spacing_large" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎯 Accuracy: 98.5%"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    

</androidx.constraintlayout.widget.ConstraintLayout>
